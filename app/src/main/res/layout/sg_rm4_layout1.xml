                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                android:hint="Range 96-144"
                android:textColor="@color/hitam"
                android:textColorHint="@color/cement_dark" />
        </LinearLayout>

        <LinearLayout
