<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tap this button to scan equipment"
        android:textAlignment="center"
        android:textColor="@color/dark_one"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_scan_equip"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/search" />

        <ProgressBar
            android:id="@+id/progress_scan"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:progressDrawable="@drawable/anim_circle" />

        <TextView
            android:id="@+id/txt_equip_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Scanning Equipment..."
            android:textAlignment="center"
            android:textColor="@color/hitam" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Equipment found :"
            android:textAlignment="center"
            android:textColor="@color/dark_one"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_equip_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/hitam"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_equip_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/hitam"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_equip_puchased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/hitam"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_loadform_kl41"
                android:text="Load KL1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_loadform_kl42"
                android:text="Load KL2" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_loadform_rm41"
                android:text="Load RM1" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_loadform_rm42"
                android:text="Load RM2" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_loadform_rm43"
                android:text="Load RM3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>